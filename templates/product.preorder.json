{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "title": {
          "type": "title",
          "settings": {
            "display_on_card": false
          }
        },
        "price": {
          "type": "price",
          "settings": {
            "display_on_card": false,
            "show_on_sale_sticker": false
          }
        },
        "quantity-selector": {
          "type": "quantity_selector",
          "settings": {
            "display_on_card": false,
            "show_label": true
          }
        },
        "variant-picker": {
          "type": "variant_picker",
          "settings": {
            "display_on_card": false,
            "option_style": "drop_down",
            "hide_option_labels": false
          }
        },
        "buy-buttons": {
          "type": "buy_buttons",
          "settings": {
            "display_on_card": false,
            "show_price": true,
            "enable_payment_button": true,
            "show_pickup_availability": false
          }
        },
        "description": {
          "type": "description",
          "settings": {
            "display_on_card": false,
            "truncate_description": false
          }
        }
      },
      "block_order": [
        "title",
        "price",
        "quantity-selector",
        "variant-picker",
        "buy-buttons",
        "description"
      ],
      "settings": {
        "crop": "",
        "image_shape": "default",
        "desktop_media_width": "lg:col-span-7_lg:col-span-5",
        "enable_image_zoom": false,
        "enable_video_looping": true,
        "autoplay_videos_on_desktop": true,
        "media_mobile_width": "w-full",
        "thumbnails_position": "left",
        "thumbnail_crop": "aspect-w-1 aspect-h-1",
        "thumbnail_shape": "heptagon",
        "hide_media_shadow": false,
        "thumbnail_size": "large",
        "color_scheme": "scheme1",
        "use_gradient_background": false
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "display_on_card": false,
        "enable_quick_buy": false,
        "related_products_heading": "You may also like",
        "max_products": "3",
        "product_tiles_aspect_ratio": "",
        "image_shape": "",
        "color_scheme": "scheme1",
        "use_gradient_background": false
      }
    }
  },
  "order": ["main", "related-products"]
}
