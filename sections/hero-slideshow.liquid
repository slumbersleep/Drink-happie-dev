{%- liquid
  assign section_color = section.settings.color_scheme

  assign style = section.settings.style
  assign height = section.settings.height

  assign stickers = section.blocks | where: 'type', 'sticker'
  assign shape_dividers = section.blocks | where: 'type', 'shape_divider'
  assign no_padding = true
  if style == 'inset'
    assign no_padding = false
  endif

  for block in section.blocks
    if block.type contains 'slide'
      assign first_content_block_index = forloop.index
      break
    endif
  endfor
-%}

<section
  class="bg-scheme-background text-scheme-text {% if section.settings.use_gradient_background %}bg-scheme-gradient{% endif %}  {% unless style == 'inset' %}full-bleed-section{% endunless %} overflow-hidden"
  data-color-scheme="{{ section_color }}"
>
  <div
    {% if section.blocks.size > 1 %}
      id="slideshow-{{ section.id }}"
      class="section-content splide {% if style == 'inset' %}py-section-vertical-spacing{% endif %}"
      data-splide='{"autoplay":{{ section.settings.auto_rotate }}, "interval": {{ section.settings.slide_speed }} }'
      {% if section.settings.auto_rotate %}data-auto-rotate="true"{% endif %}
    {% endif %}
  >
    <div class="splide__track">
      <ul class="splide__list w-full" role="list">
        {% for block in section.blocks %}
          {% liquid
            unless block.type contains 'slide'
              continue
            endunless

            assign preload = false
            if section.index == 1 and forloop.index == first_content_block_index
              assign preload = true
            endif
          %}
          <li class="splide__slide block w-full" {{ block.shopify_attributes }}>
            {% liquid
              if block.settings.place_content == 'inherit'
                assign place_content = section.settings.place_content
              else
                assign place_content = block.settings.place_content
              endif

              if block.settings.text_align == 'inherit'
                assign text_align = section.settings.text_align
              else
                assign text_align = block.settings.text_align
              endif

              assign loading = 'lazy'
              if forloop.index == first_content_block_index and section.index <= 3
                assign loading = 'eager'
              endif

              case block.type
                when 'slide'
                  if height == 'natural'
                    if forloop.index > first_content_block_index
                      assign crop = 'object-slideshow'
                    else
                      assign crop = 'object-wrapper-none'
                    endif
                  else
                    assign crop = 'object-wrapper ' | append: height
                  endif

                  render 'image-with-text-overlay', image: block.settings.image, image_mobile: block.settings.image_mobile, place_content: place_content, text_align: text_align, color_scheme: section.settings.color_scheme, use_gradient_background: block.settings.use_gradient_background, title: block.settings.title, richtext: block.settings.richtext, cta_url: block.settings.cta_url, cta_text: block.settings.cta_text, display_on_card: section.settings.display_on_card, style: style, crop: crop, slideshow_height: height, display_content_below_image_on_mobile: section.settings.display_content_below_image_on_mobile, heading_size: section.settings.heading_size, loading: loading, preload: preload
                when 'video_slide'
                  if height == 'natural'
                    assign crop = block.settings.crop

                    if forloop.index > first_content_block_index
                      assign crop_desktop = 'slideshow'
                    else
                      assign crop_desktop = block.settings.crop_desktop
                    endif

                    assign container_class = null
                  else
                    assign container_class = 'object-wrapper ' | append: height
                  endif

                  render 'video-with-text-overlay', video: block.settings.video, place_content: place_content, text_align: text_align, color_scheme: section.settings.color_scheme, use_gradient_background: block.settings.use_gradient_background, title: block.settings.title, richtext: block.settings.richtext, cta_url: block.settings.cta_url, cta_text: block.settings.cta_text, display_on_card: section.settings.display_on_card, style: style, crop: crop, crop_desktop: crop_desktop, container_class: container_class, display_content_below_image_on_mobile: section.settings.display_content_below_image_on_mobile, heading_size: section.settings.heading_size
              endcase
            %}
          </li>
        {% endfor %}
      </ul>
    </div>
    {% if section.blocks.size > 1 %}
      <div class="splide__arrows mt-5 flex items-center justify-between px-section {% if style == 'full' %}relative lg:absolute z-30 bottom-0 right-0 pb-5{% endif %}">
        {%- render 'splide-navigation',
          autoplay: section.settings.auto_rotate
        -%}
      </div>
    {% endif %}

    {%- liquid
      if style == 'full'
        for shape_divider in shape_dividers
          render 'block-shape-divider', block: shape_divider, no_padding: no_padding
        endfor
      endif
    -%}
  </div>
</section>

{%- liquid
  for sticker in stickers
    render 'block-sticker', block: sticker
  endfor

  if style == 'inset'
    for shape_divider in shape_dividers
      render 'block-shape-divider', block: shape_divider, no_padding: no_padding
    endfor
  endif
-%}

