<div class="partical-box partical-bottom">
  <img
    width=""
    height=""
    src="https://cdn.shopify.com/s/files/1/0698/6108/1223/files/blue-partical-bottom.png?v=1762861290"
    alt="img"
  >
</div>
<div class="cstm-container p-relative">
  <div class="common-heading-wrap text-center">
    {% if section.settings.heading_icon != blank %}
      {{ section.settings.heading_icon | image_url: width: 3000 | image_tag: alt: 'icon' }}
    {% endif %}
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
  </div>
  <div class="cstm-row real-people-slide Justify-content-center">
    {% for block in section.blocks %}
      <div class="cstm-col-20">
        <div class="sm-box-wrapper">
          {% if block.settings.item_icon != blank %}
            {{ block.settings.item_icon | image_url: width: 3000 | image_tag: alt: 'icon' }}
          {% endif %}
          {% if block.settings.item_heading != blank %}
            <h4>{{ block.settings.item_heading }}</h4>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
{
  "name": "Real People",
  "tag": "section",
  "class": "people-sec",
  "settings": [
    {
      "type": "image_picker",
      "id": "heading_icon",
      "label": "Heading Icon"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The happie difference"
    }
  ],
  "blocks": [
    {
      "type": "items",
      "name": "Items",
      "settings": [
        {
          "type": "image_picker",
          "id": "item_icon",
          "label": "Item Icon"
        },
        {
          "type": "text",
          "id": "item_heading",
          "label": "Item Heading"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Real People"
    }
  ]
}
{% endschema %}
