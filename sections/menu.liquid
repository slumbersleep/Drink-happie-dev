{%- liquid
  assign use_gradient_background = section.settings.use_gradient_background
  assign color_scheme = section.settings.color_scheme
  assign title = section.settings.title
  assign heading_size = section.settings.heading_size
  assign title_price_color = section.settings.title_price_color
  assign tab_1 = section.settings.tab_1
  assign tab_2 = section.settings.tab_2
  assign tab_3 = section.settings.tab_3
  assign show_menu_title_border = section.settings.show_menu_title_border
  assign enable_tabs = section.settings.enable_tabs
  assign menu_heading_style = section.settings.menu_heading_style
  assign border_top_classes = ' pt-2 border-solid border-t-scheme-text border-t-general'
  assign border_bottom_classes = ' pb-2 border-solid border-b-scheme-text border-b-general'

  assign stickers = section.blocks | where: 'type', 'sticker'
  assign shape_dividers = section.blocks | where: 'type', 'shape_divider'
  for sticker in stickers
    render 'block-sticker' with block: sticker, section: section
  endfor
  for shape_divider in shape_dividers
    render 'block-shape-divider' with block: shape_divider, section: section
  endfor
-%}

{%- for block in section.blocks -%}
  {%- render 'shape-defs',
    shape: block.settings.image_shape,
    shape_id: block.id,
    blob_type: block.settings.blob_type,
    index: forloop.index0
  -%}
{%- endfor -%}

<section
  class="bg-scheme-background text-scheme-text {% if use_gradient_background %}bg-scheme-gradient{% endif %} relative overflow-hidden"
  data-color-scheme="{{ color_scheme }}"
>
  <div
    class="menu section-content relative z-10 py-section-vertical-spacing"
    {% if enable_tabs %}
      x-data="{ tab: 'tab_1' }"
      {% if request.design_mode %}
        x-init="tab = $root.dataset.startTab; $root.removeAttribute('data-start-tab');"
        data-start-tab="tab_1"
      {% endif %}
    {% endif %}
  >
    {%- if title != '' -%}
      <h2
        class="font-heading {{ heading_size }} heading-style mx-auto text-center"
        id="{{ section.id }}-tablist_menu"
      >
        {{ title }}
      </h2>
    {%- endif -%}
    {% if enable_tabs %}
      <div
        class="section-content-top-margin flex flex-wrap justify-center gap-4 text-center text-scheme-text"
        role="tablist"
        aria-labelledby="{{ section.id }}-tablist_menu"
      >
        {% for i in (1..3) %}
          {% assign tab_key = 'tab_' | append: i %}
          {% assign tab_value = section.settings[tab_key] %}
          {% assign tabpanel_key = section.id
            | append: '-'
            | append: 'tabpanel_'
            | append: i
          %}

          {% if tab_value != blank %}
            <button
              @click="tab = '{{ tab_key }}'"
              :class="{ 'active bg-scheme-text text-scheme-text-contrast': tab === '{{ tab_key }}' }"
              class="btn relative bg-scheme-secondary-background text-sm text-scheme-text after:hidden lg:text-base"
              id="{{ section.id }}-{{ tab_key }}"
              type="button"
              role="tab"
              :aria-selected="tab === '{{ tab_key }}' ? 'true' : 'false'"
              aria-controls="{{ tabpanel_key }}"
            >
              {{- tab_value -}}
              {%- if request.design_mode -%}
                {%- for block in section.blocks -%}
                  {%- if block.settings.tab == tab_key -%}
                    <div
                      {{ block.shopify_attributes }}
                      data-menu-index="{{ tab_key }}"
                      class="absolute inset-0 z-20"
                      aria-hidden="true"
                    ></div>
                  {%- endif -%}
                {%- endfor -%}
              {%- endif -%}
            </button>
          {%- endif -%}
        {% endfor %}
      </div>
    {% endif %}
    <div
      class="relative z-10 mx-auto max-w-site px-section"
    >
      <div class="{% if section.settings.display_on_card %}max-w-3xl{% else %}max-w-2xl{% endif %} {% if title != '' or tab_1 != blank or tab_2 != blank or tab_3 != blank %}section-content-top-margin{% endif %} mx-auto">
        <div class="{% if section.settings.display_on_card %}text-scheme-text card{% endif %}">
          <div
            class="{% if section.settings.display_on_card %}card__surface p-5 lg:p-10{% endif %}"
          >
            <div class="menu__content">
              {% for block in section.blocks %}
                {% if block.type == 'menu_group' %}
                  {% liquid
                    assign heading = block.settings.heading
                    assign tab = block.settings.tab
                    assign tabpanel_id = section.id | append: '-' | append: block.settings.tab | replace: 'tab', 'tabpanel'
                  %}
                  <div
                    {% if enable_tabs %}
                      x-show="tab === '{{ tab }}'"
                      id="{{ tabpanel_id }}"
                      role="tabpanel"
                      aria-labelledby="{{ section.id }}-{{ tab }}"
                      data-menu-index="{{ tab }}"
                    {% else %}
                      {{ block.shopify_attributes }}
                    {% endif %}
                    class="mb-4 flex flex-row flex-wrap items-end justify-between gap-4"
                    {% unless tab == 'tab_1' %}
                      style="display: none;"
                    {% endunless %}
                  >
                    {% if heading != blank %}
                      <div
                        class="my-4 grow-[2] basis-full"
                      >
                        <h3 class="font-heading {{ menu_heading_style }} heading-style text-center">
                          {{ heading }}
                        </h3>
                      </div>
                    {% endif %}

                    {%- for i in (1..10) -%}
                      {%- capture title %}title_{{ i }}{%- endcapture -%}
                      {%- capture price %}price_{{ i }}{%- endcapture -%}
                      {%- capture description %}description_{{ i }}{%- endcapture -%}
                      {%- liquid
                        assign title = block.settings[title]
                        assign price = block.settings[price]
                        assign description = block.settings[description]
                      -%}
                      {% if title != blank
                        or price != blank
                        or description != blank
                      %}
                        <div
                          class="grow-1 mb-4 basis-full self-stretch md:basis-[48%]"
                        >
                          <div class="col-span-2 row-span-2 grid gap-x-4 {% if show_menu_title_border and title != blank and description == blank %}{{ border_bottom_classes }}{% endif %}">
                            {% if title != blank %}
                              <div class="col-span-1 col-start-1">
                                <h4 class="inline-heading-rte font-bold {{ title_price_color }}">
                                  {{ title }}
                                </h4>
                              </div>
                            {% endif %}
                            {% if price != blank %}
                              <div class="col-span-1 col-start-2 text-right">
                                <p class="{{ title_price_color }}">
                                  {{ price }}
                                </p>
                              </div>
                            {% endif %}
                            {% if description != blank %}
                              <div class="col-start-1 {% if title == blank %}row-start-1 col-span-1{% else %}row-start-2 col-span-2 mt-2{% endif %} {% if show_menu_title_border and title != blank and description != blank %}{{ border_top_classes }}{% endif %}">
                                <p class="text-sm">
                                  {{ description }}
                                </p>
                              </div>
                            {% endif %}
                          </div>
                        </div>
                      {% endif %}
                    {%- endfor -%}
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {%- liquid
    for block in section.blocks
      case block.type
        when 'background_shape'
          render 'block-background-shape' with block: block, section: section
        when 'background_pattern'
          render 'block-background-pattern' with block: block, section: section, scheme: section.settings.color_scheme
      endcase
    endfor
  -%}
</section>

