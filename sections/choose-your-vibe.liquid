{%- liquid
  assign section_title = section.settings.title
  assign section_subtitle = section.settings.subtitle
  assign show_cloud_icon = section.settings.show_cloud_icon
  
  assign card_1_badge = section.settings.card_1_badge
  assign card_1_title = section.settings.card_1_title
  assign card_1_subtitle = section.settings.card_1_subtitle
  assign card_1_image = section.settings.card_1_image
  assign card_1_benefits = section.settings.card_1_benefits
  assign card_1_cta_text = section.settings.card_1_cta_text
  assign card_1_cta_url = section.settings.card_1_cta_url
  assign card_1_price = section.settings.card_1_price
  
  assign card_2_badge = section.settings.card_2_badge
  assign card_2_title = section.settings.card_2_title
  assign card_2_subtitle = section.settings.card_2_subtitle
  assign card_2_image = section.settings.card_2_image
  assign card_2_benefits = section.settings.card_2_benefits
  assign card_2_cta_text = section.settings.card_2_cta_text
  assign card_2_cta_url = section.settings.card_2_cta_url
  assign card_2_price = section.settings.card_2_price
  
  assign trust_1_text = section.settings.trust_1_text
  assign trust_2_text = section.settings.trust_2_text
  assign trust_3_text = section.settings.trust_3_text
-%}

<section
  id="choose-vibe-{{ section.id }}"
  class="choose-vibe"
>
  <div class="choose-vibe__container">
    <!-- Header -->
    <div class="choose-vibe__header">
      {%- if show_cloud_icon -%}
        <div class="choose-vibe__icon" style="width: {{ section.settings.icon_size }}px;">
          <svg viewBox="0 0 64 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <!-- Rainbow arc -->
            <path d="M16 32C16 23.163 23.163 16 32 16C40.837 16 48 23.163 48 32" stroke="{{ section.settings.icon_rainbow_red }}" stroke-width="4" stroke-linecap="round"/>
            <path d="M20 32C20 25.373 25.373 20 32 20C38.627 20 44 25.373 44 32" stroke="{{ section.settings.icon_rainbow_yellow }}" stroke-width="4" stroke-linecap="round"/>
            <path d="M24 32C24 27.582 27.582 24 32 24C36.418 24 40 27.582 40 32" stroke="{{ section.settings.icon_rainbow_blue }}" stroke-width="4" stroke-linecap="round"/>
            <!-- Cloud -->
            <ellipse cx="32" cy="38" rx="16" ry="10" fill="{{ section.settings.icon_cloud_fill }}"/>
            <ellipse cx="22" cy="36" rx="10" ry="8" fill="{{ section.settings.icon_cloud_fill }}"/>
            <ellipse cx="42" cy="36" rx="10" ry="8" fill="{{ section.settings.icon_cloud_fill }}"/>
            <ellipse cx="32" cy="34" rx="12" ry="8" fill="{{ section.settings.icon_cloud_fill }}"/>
            <!-- Cloud outline -->
            <ellipse cx="32" cy="38" rx="16" ry="10" stroke="{{ section.settings.icon_cloud_stroke }}" stroke-width="2"/>
            <path d="M16 36C16 36 14 34 14 32C14 28 18 26 22 26C22 22 26 20 30 20C30 20 32 18 36 18C40 18 44 22 44 26C48 26 52 28 52 32C52 34 50 36 50 36" stroke="{{ section.settings.icon_cloud_stroke }}" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </div>
      {%- endif -%}
      
      <h2 class="choose-vibe__title">{{ section_title }}</h2>
      
      {%- if section_subtitle != blank -%}
        <p class="choose-vibe__subtitle">{{ section_subtitle }}</p>
      {%- endif -%}
    </div>

    <!-- Product Cards -->
    <div class="choose-vibe__cards">
      <!-- Card 1: THC Seltzers -->
      <div class="choose-vibe__card choose-vibe__card--thc">
        <div class="choose-vibe__card-image">
          {%- if card_1_badge != blank -%}
            <span class="choose-vibe__badge choose-vibe__badge--thc">{{ card_1_badge }}</span>
          {%- endif -%}
          
          {%- if card_1_image != blank -%}
            <img
              src="{{ card_1_image | image_url: width: 800 }}"
              alt="{{ card_1_image.alt | escape }}"
              loading="lazy"
              class="choose-vibe__image"
            >
          {%- else -%}
            <div class="choose-vibe__placeholder">
              <span>Product Image</span>
              <span class="choose-vibe__placeholder-sub">3 cans shown</span>
            </div>
          {%- endif -%}
        </div>
        
        <div class="choose-vibe__card-content">
          <div class="choose-vibe__card-header">
            <span class="choose-vibe__card-icon choose-vibe__card-icon--thc">
              <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="M8 14s1.5 2 4 2 4-2 4-2"/>
                <circle cx="9" cy="9" r="1" fill="currentColor"/>
                <circle cx="15" cy="9" r="1" fill="currentColor"/>
              </svg>
            </span>
            <div>
              <h3 class="choose-vibe__card-title">{{ card_1_title }}</h3>
              <p class="choose-vibe__card-subtitle">{{ card_1_subtitle }}</p>
            </div>
          </div>
          
          <ul class="choose-vibe__benefits">
            {%- for block in section.blocks -%}
              {%- if block.type == 'card_1_benefit' -%}
                <li class="choose-vibe__benefit">
                  <svg class="choose-vibe__check choose-vibe__check--thc" viewBox="0 0 24 24" width="18" height="18">
                    <circle cx="12" cy="12" r="10" fill="currentColor"/>
                    <path d="M8 12l3 3 5-6" stroke="#fff" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  {{ block.settings.benefit_text }}
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
          
          <div class="choose-vibe__card-footer">
            <a href="{{ card_1_cta_url }}" class="choose-vibe__cta choose-vibe__cta--thc">
              {{ card_1_cta_text }}
            </a>
            <div class="choose-vibe__price">
              <span class="choose-vibe__price-label">Starting at</span>
              <span class="choose-vibe__price-value">{{ card_1_price }}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Card 2: Fungi Fusion -->
      <div class="choose-vibe__card choose-vibe__card--fungi">
        <div class="choose-vibe__card-image">
          {%- if card_2_badge != blank -%}
            <span class="choose-vibe__badge choose-vibe__badge--fungi">{{ card_2_badge }}</span>
          {%- endif -%}
          
          {%- if card_2_image != blank -%}
            <img
              src="{{ card_2_image | image_url: width: 800 }}"
              alt="{{ card_2_image.alt | escape }}"
              loading="lazy"
              class="choose-vibe__image"
            >
          {%- else -%}
            <div class="choose-vibe__placeholder choose-vibe__placeholder--fungi">
              <span>Product Image</span>
              <span class="choose-vibe__placeholder-sub">3 cans shown</span>
            </div>
          {%- endif -%}
        </div>
        
        <div class="choose-vibe__card-content">
          <div class="choose-vibe__card-header">
            <span class="choose-vibe__card-icon choose-vibe__card-icon--fungi">
              <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <circle cx="12" cy="12" r="3"/>
                <path d="M12 2v4M12 18v4M2 12h4M18 12h4M4.93 4.93l2.83 2.83M16.24 16.24l2.83 2.83M4.93 19.07l2.83-2.83M16.24 7.76l2.83-2.83"/>
              </svg>
            </span>
            <div>
              <h3 class="choose-vibe__card-title choose-vibe__card-title--fungi">{{ card_2_title }}</h3>
              <p class="choose-vibe__card-subtitle choose-vibe__card-subtitle--fungi">{{ card_2_subtitle }}</p>
            </div>
          </div>
          
          <ul class="choose-vibe__benefits">
            {%- for block in section.blocks -%}
              {%- if block.type == 'card_2_benefit' -%}
                <li class="choose-vibe__benefit">
                  <svg class="choose-vibe__check choose-vibe__check--fungi" viewBox="0 0 24 24" width="18" height="18">
                    <circle cx="12" cy="12" r="10" fill="currentColor"/>
                    <path d="M8 12l3 3 5-6" stroke="#fff" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  {{ block.settings.benefit_text }}
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
          
          <div class="choose-vibe__card-footer">
            <a href="{{ card_2_cta_url }}" class="choose-vibe__cta choose-vibe__cta--fungi">
              {{ card_2_cta_text }}
            </a>
            <div class="choose-vibe__price">
              <span class="choose-vibe__price-label">Starting at</span>
              <span class="choose-vibe__price-value">{{ card_2_price }}</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Trust Bar -->
    <div class="choose-vibe__trust-bar">
      <div class="choose-vibe__trust-item">
        <svg class="choose-vibe__trust-icon" viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 12l2 2 4-4"/>
          <path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"/>
        </svg>
        <span>{%- if trust_1_text != blank -%}{{ trust_1_text }}{%- else -%}<strong>Lab tested</strong> for purity{%- endif -%}</span>
      </div>
      <div class="choose-vibe__trust-item">
        <svg class="choose-vibe__trust-icon" viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="2" y="7" width="20" height="14" rx="2"/>
          <path d="M16 7V5a4 4 0 00-8 0v2"/>
          <path d="M12 14v3"/>
        </svg>
        <span>{%- if trust_2_text != blank -%}{{ trust_2_text }}{%- else -%}<strong>Free shipping</strong> on orders $50+{%- endif -%}</span>
      </div>
      <div class="choose-vibe__trust-item">
        <svg class="choose-vibe__trust-icon" viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"/>
        </svg>
        <span>{%- if trust_3_text != blank -%}{{ trust_3_text }}{%- else -%}<strong>30-day guarantee</strong> — love it or return it{%- endif -%}</span>
      </div>
    </div>
  </div>
</section>

<style>
  #choose-vibe-{{ section.id }} {
    --vibe-bg: {{ section.settings.background_color }};
    --vibe-title-color: {{ section.settings.title_color }};
    --vibe-subtitle-color: {{ section.settings.subtitle_color }};
    --vibe-trust-bar-color: {{ section.settings.trust_bar_color }};
    --vibe-thc-accent: {{ section.settings.thc_accent_color }};
    --vibe-thc-bg: {{ section.settings.thc_card_bg }};
    --vibe-fungi-accent: {{ section.settings.fungi_accent_color }};
    --vibe-fungi-bg: {{ section.settings.fungi_card_bg }};
    --vibe-cta-bg: {{ section.settings.cta_bg_color }};
    --vibe-cta-text: {{ section.settings.cta_text_color }};
  }

  #choose-vibe-{{ section.id }}.choose-vibe {
    background: var(--vibe-bg);
    padding: 80px 0;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* Header */
  #choose-vibe-{{ section.id }} .choose-vibe__header {
    text-align: center;
    margin-bottom: 48px;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__icon {
    margin: 0 auto 16px;
    display: flex;
    justify-content: center;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__icon svg {
    width: 100%;
    height: auto;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__title {
    font-size: clamp(32px, 4vw, 48px);
    font-weight: 800;
    color: var(--vibe-title-color);
    margin: 0 0 16px;
    letter-spacing: -0.5px;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__subtitle {
    font-size: 17px;
    color: var(--vibe-subtitle-color);
    max-width: 500px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Cards Grid */
  #choose-vibe-{{ section.id }} .choose-vibe__cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
    margin-bottom: 48px;
  }

  /* Card Base */
  #choose-vibe-{{ section.id }} .choose-vibe__card {
    background: #FFFFFF;
    border-radius: 24px;
    overflow: hidden;
    padding: 24px;
  }

  /* Card Image Area */
  #choose-vibe-{{ section.id }} .choose-vibe__card-image {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    margin-bottom: 24px;
    aspect-ratio: 4/3;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__card--thc .choose-vibe__card-image {
    background: var(--vibe-thc-bg);
  }

  #choose-vibe-{{ section.id }} .choose-vibe__card--fungi .choose-vibe__card-image {
    background: var(--vibe-fungi-bg);
  }

  #choose-vibe-{{ section.id }} .choose-vibe__badge {
    position: absolute;
    top: 16px;
    right: 16px;
    padding: 8px 16px;
    border-radius: 999px;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__badge--thc {
    background: var(--vibe-thc-accent);
    color: #FFFFFF;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__badge--fungi {
    background: var(--vibe-fungi-accent);
    color: #FFFFFF;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__image {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 4px;
    color: var(--vibe-thc-accent);
    font-weight: 500;
    font-size: 16px;
    border: 2px dashed rgba(107, 114, 92, 0.3);
    border-radius: 12px;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__placeholder--fungi {
    color: var(--vibe-fungi-accent);
    border-color: rgba(216, 130, 110, 0.3);
  }

  #choose-vibe-{{ section.id }} .choose-vibe__placeholder-sub {
    font-size: 13px;
    font-weight: 400;
    opacity: 0.6;
  }

  /* Card Content */
  #choose-vibe-{{ section.id }} .choose-vibe__card-header {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 20px;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__card-icon {
    width: 40px;
    height: 40px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__card-icon--thc {
    background: rgba(107, 114, 92, 0.1);
    color: var(--vibe-thc-accent);
  }

  #choose-vibe-{{ section.id }} .choose-vibe__card-icon--fungi {
    background: rgba(216, 130, 110, 0.1);
    color: var(--vibe-fungi-accent);
  }

  #choose-vibe-{{ section.id }} .choose-vibe__card-title {
    font-size: 22px;
    font-weight: 700;
    color: var(--vibe-thc-accent);
    margin: 0 0 4px;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__card-title--fungi {
    color: var(--vibe-fungi-accent);
  }

  #choose-vibe-{{ section.id }} .choose-vibe__card-subtitle {
    font-size: 13px;
    color: var(--vibe-thc-accent);
    margin: 0;
    opacity: 0.8;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__card-subtitle--fungi {
    color: var(--vibe-fungi-accent);
  }

  /* Benefits List */
  #choose-vibe-{{ section.id }} .choose-vibe__benefits {
    list-style: none;
    padding: 0;
    margin: 0 0 24px;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__benefit {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    color: var(--vibe-text);
    padding: 8px 0;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__check {
    flex-shrink: 0;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__check--thc {
    color: var(--vibe-thc-accent);
  }

  #choose-vibe-{{ section.id }} .choose-vibe__check--fungi {
    color: var(--vibe-fungi-accent);
  }

  /* Card Footer */
  #choose-vibe-{{ section.id }} .choose-vibe__card-footer {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__cta {
    flex: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 24px;
    border-radius: 999px;
    font-weight: 600;
    font-size: 15px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__cta--thc {
    background: var(--vibe-cta-bg);
    color: var(--vibe-cta-text);
  }

  #choose-vibe-{{ section.id }} .choose-vibe__cta--fungi {
    background: var(--vibe-cta-bg);
    color: var(--vibe-cta-text);
  }

  #choose-vibe-{{ section.id }} .choose-vibe__cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(247, 205, 70, 0.3);
  }

  #choose-vibe-{{ section.id }} .choose-vibe__price {
    text-align: right;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__price-label {
    display: block;
    font-size: 12px;
    color: var(--vibe-text);
    opacity: 0.6;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__price-value {
    display: block;
    font-size: 24px;
    font-weight: 700;
    color: var(--vibe-text);
  }

  /* Trust Bar */
  #choose-vibe-{{ section.id }} .choose-vibe__trust-bar {
    display: flex;
    justify-content: center;
    gap: 48px;
    padding-top: 32px;
    border-top: 1px solid rgba(0, 0, 0, 0.08);
  }

  #choose-vibe-{{ section.id }} .choose-vibe__trust-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: var(--vibe-trust-bar-color);
  }

  #choose-vibe-{{ section.id }} .choose-vibe__trust-icon {
    color: var(--vibe-trust-bar-color);
    opacity: 0.7;
  }

  #choose-vibe-{{ section.id }} .choose-vibe__trust-item strong {
    font-weight: 600;
  }

  /* Responsive */
  @media (max-width: 900px) {
    #choose-vibe-{{ section.id }} .choose-vibe__cards {
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }

  @media (max-width: 768px) {
    #choose-vibe-{{ section.id }}.choose-vibe {
      padding: 60px 0;
    }

    #choose-vibe-{{ section.id }} .choose-vibe__header {
      margin-bottom: 32px;
    }

    #choose-vibe-{{ section.id }} .choose-vibe__card {
      padding: 20px;
    }

    #choose-vibe-{{ section.id }} .choose-vibe__card-footer {
      flex-direction: column;
      gap: 12px;
    }

    #choose-vibe-{{ section.id }} .choose-vibe__cta {
      width: 100%;
    }

    #choose-vibe-{{ section.id }} .choose-vibe__price {
      text-align: center;
    }

    #choose-vibe-{{ section.id }} .choose-vibe__trust-bar {
      flex-direction: column;
      gap: 16px;
      align-items: center;
    }
  }
</style>

{% schema %}
{
  "name": "Choose Your Vibe",
  "tag": "section",
  "class": "choose-vibe-section",
  "settings": [
    {
      "type": "header",
      "content": "Header"
    },
    {
      "type": "checkbox",
      "id": "show_cloud_icon",
      "label": "Show Cloud Icon",
      "default": true
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Icon Size",
      "min": 40,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 64
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Choose Your Vibe"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Two product lines, one mission — plant-powered happiness for every moment."
    },
    {
      "type": "header",
      "content": "Card 1: THC Seltzers"
    },
    {
      "type": "text",
      "id": "card_1_badge",
      "label": "Badge Text",
      "default": "MOST POPULAR"
    },
    {
      "type": "image_picker",
      "id": "card_1_image",
      "label": "Product Image"
    },
    {
      "type": "text",
      "id": "card_1_title",
      "label": "Title",
      "default": "THC Infused Seltzers"
    },
    {
      "type": "text",
      "id": "card_1_subtitle",
      "label": "Subtitle",
      "default": "5mg THC + 5mg CBD or 10mg THC + 5mg CBD"
    },
    {
      "type": "text",
      "id": "card_1_cta_text",
      "label": "Button Text",
      "default": "Shop THC Seltzers"
    },
    {
      "type": "url",
      "id": "card_1_cta_url",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "card_1_price",
      "label": "Starting Price",
      "default": "$19.99"
    },
    {
      "type": "header",
      "content": "Card 2: Fungi Fusion"
    },
    {
      "type": "text",
      "id": "card_2_badge",
      "label": "Badge Text",
      "default": "ZERO THC"
    },
    {
      "type": "image_picker",
      "id": "card_2_image",
      "label": "Product Image"
    },
    {
